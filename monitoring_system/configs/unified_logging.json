{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "[%(asctime)s] %(name)s - %(levelname)s - %(message)s",
      "datefmt": "%Y-%m-%dT%H:%M:%S"
    },
    "json": {
      "format": "{\"timestamp\": \"%(asctime)s\", \"component\": \"%(name)s\", \"level\": \"%(levelname)s\", \"message\": \"%(message)s\", \"source\": \"%(filename)s:%(lineno)d\"}",
      "datefmt": "%Y-%m-%dT%H:%M:%S.%f"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "simple",
      "stream": "ext://sys.stdout"
    },
    "pipeline_file": {
      "class": "logging.FileHandler",
      "level": "INFO",
      "formatter": "simple",
      "filename": "/var/log/pipeline/pipeline.log"
    },
    "pipeline_metrics": {
      "class": "logging.FileHandler",
      "level": "INFO",
      "formatter": "json",
      "filename": "/var/log/pipeline/metrics.log"
    },
    "pipeline_errors": {
      "class": "logging.FileHandler",
      "level": "ERROR",
      "formatter": "json",
      "filename": "/var/log/pipeline/errors.log"
    }
  },
  "loggers": {
    "pipeline": {
      "level": "INFO",
      "handlers": ["console", "pipeline_file", "pipeline_metrics"],
      "propagate": false
    },
    "pipeline.monitor": {
      "level": "INFO",
      "handlers": ["console", "pipeline_metrics"],
      "propagate": false
    }
  },
  "root": {
    "level": "INFO",
    "handlers": ["console", "pipeline_file"]
  }
}
